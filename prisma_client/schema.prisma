datasource db {
  provider = "sqlite"
  url      = "file:posts.sqlite"
}

generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
  output               = "./prisma_client"
}

model Post {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  author     String
  avatar     String?
  title      String
  content    String?
}
