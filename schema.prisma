datasource db {
  provider = "sqlite"
  url      = "file:posts.sqlite"
}

generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
  output               = "./generated/prisma"
}

model Post {
  id      Int      @id @default(autoincrement())
  uuid    String   @unique @default(uuid())
  created DateTime @default(now())
  author  String
  title   String
  content String?
  avatar  Bytes?
}
